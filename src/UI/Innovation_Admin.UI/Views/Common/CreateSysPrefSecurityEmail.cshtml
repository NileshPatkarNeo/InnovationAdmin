                        <input asp-for="Status" class="form-control" id="status" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-lg flex-fill">Create</button>
                        <a asp-action="SysPrefSecurityEmail" class="btn btn-secondary btn-lg flex-fill">Back</a>
