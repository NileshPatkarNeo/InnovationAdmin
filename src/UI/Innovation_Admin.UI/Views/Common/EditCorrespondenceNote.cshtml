@model Innovation_Admin.UI.Models.CorrespondenceNote.CorrespondenceNoteDto

@{
       Layout = "~/Views/Shared/_AdminHomePage.cshtml";
}


<h1>Edit Correspondence Note</h1>
<hr />
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

</head>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form asp-action="EditCorrespondenceNote" method="post" id="editCorrespondenceNoteForm" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Note" class="control-label">Note<span class="text-danger">*</span></label>
                        <input asp-for="Note" class="form-control" id="Note" maxlength="51" />
                        <span asp-validation-for="Note" class="text-danger"></span>
                    </div>
                   
                    <div class="form-group d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary btn-lg flex-fill">Save</button>
                        <a asp-action="CorrespondenceNotes" class="btn btn-secondary btn-lg flex-fill">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<link href="~/css/correspondencenote/editcorrespondencenote.css" rel="stylesheet" />

<script src="~/js/correspondencenotess/editcorrespondencenote.js"></script>