@model Innovation_Admin.UI.Models.CorrespondenceNote.CorrespondenceNoteDto

@{
    Layout = "~/Views/Shared/_AdminHomePage.cshtml";
}

<head>
    <link href="~/css/ReceiptBatchSource/EditReceiptBatchSource.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</head>

<body>
    <h1 class="text-center test">Edit Correspondence Note</h1>
   
    <div class="form-container">
        <form asp-action="EditCorrespondenceNote" method="post" id="editCorrespondenceNoteForm" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-4">
                <label asp-for="Note" class="control-label">Note <span class="text-danger">*</span></label>
                <input asp-for="Note" class="form-control" id="Note" maxlength="51" onkeypress="return onlyAlphabets(event, this);"/>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>

            <div class="button-container">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="CorrespondenceNotes" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</body>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<link href="~/css/correspondencenote/editcorrespondencenote.css" rel="stylesheet" />

<script src="~/js/correspondencenotess/editcorrespondencenote.js"></script>

<script>
    function onlyAlphabets(e, t) {
        try {
            if (window.event) {
                var charCode = window.event.keyCode;
            }
            else if (e) {
                var charCode = e.which;
            }
            else { return true; }
            if ((charCode > 64 && charCode < 91) || (charCode > 96 && charCode < 123) || charCode == 32)
                return true;
            else
                return false;
        }
        catch (err) {
            alert(err.Description);
        }
    }

</script>