@model IEnumerable<Innovation_Admin.UI.Models.SysPrefSecurityEmail.SysPrefSecurityEmailDto>

@{
    ViewData["Title"] = "SysPrefSecurityEmail";
}

<h1>System Preference Security Email</h1>

<p>
    <a asp-action="CreateSysPrefSecurityEmail" asp-controller="Common">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SysPrefSecurityEmailId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultFromName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultFromAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultReplyToAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultReplyToName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SysPrefSecurityEmailId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultFromName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultFromAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultReplyToAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultReplyToName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                    @Html.ActionLink("Edit", "EditSysPrefSecurityEmail", new { emailId = item.SysPrefSecurityEmailId }) |
                    <a href="#" onclick="confirmDelete('@item.SysPrefSecurityEmailId')">Delete</a>
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>

<script type="text/javascript">
    function confirmDelete(emailId) {
        if (confirm("Are you sure you want to delete this SecurityEmail?")) {
            var form = document.createElement("form");
            form.method = "post";
            form.action = "/Common/DeleteSysPrefSecurityEmail";

            var hiddenField = document.createElement("input");
            hiddenField.type = "hidden";
            hiddenField.name = "emailId";
            hiddenField.value = emailId;
            form.appendChild(hiddenField);

            document.body.appendChild(form);
            form.submit();
        }
    }

</script>
