@model IEnumerable<Innovation_Admin.UI.Models.SysPrefSecurityEmail.SysPrefSecurityEmailDto>

@{
    ViewData["Title"] = "SysPrefSecurityEmail";
    Layout = "~/Views/Shared/_AdminHomePage.cshtml";
}

<h1>System Preference Security Email</h1>


<div style="height:50px; margin:0 20px;">
    <p>
        <a asp-action="CreateSysPrefSecurityEmail" asp-controller="Common" class="btn btn-primary float-end">
            <i class="bi bi-plus-circle"></i> Add
        </a>
    </p>
</div>


<table class="table table-striped" id="emailTable">
    <thead>
        <tr>
            <th>Sr No.</th>
            <th>Default Name</th>
            <th>Default Address</th>
            <th>Default Reply To Address</th>
            <th>Default Reply To Name</th>
            <th style="display:none;">@Html.DisplayNameFor(model => model.Status)</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int serialNumber = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@serialNumber</td>
                    <td>@Html.DisplayFor(modelItem => item.DefaultFromName)</td>
                    <td>@Html.DisplayFor(modelItem => item.DefaultFromAddress)</td>
                    <td>@Html.DisplayFor(modelItem => item.DefaultReplyToAddress)</td>
                    <td>@Html.DisplayFor(modelItem => item.DefaultReplyToName)</td>
                    <td style="display:none;">@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("EditSysPrefSecurityEmail", new { emailId = item.SysPrefSecurityEmailId })" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-fill"></i> 
                            </a>
                            <a href="#" onclick="confirmDelete('@item.SysPrefSecurityEmailId')" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> 
                            </a>
                        </div>
                    </td>

                </tr>
                serialNumber++;
            }
        }
    </tbody>
</table>

<script src="~/Scripts/jquery-2.1.3.min.js" type="text/javascript"></script>
<script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
<script src="~/Scripts/grid-0.4.3.min.js" type="text/javascript"></script>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js"></script>

<script type="text/javascript">


    function confirmDelete(emailId) {
        if (confirm("Are you sure?")) {
            var form = document.createElement("form");
            form.method = "post";
            form.action = "/Common/DeleteSysPrefSecurityEmail";

            var hiddenField = document.createElement("input");
            hiddenField.type = "hidden";
            hiddenField.name = "emailId";
            hiddenField.value = emailId;
            form.appendChild(hiddenField);

            document.body.appendChild(form);
            form.submit();
        }
    }



    $('#emailTable').dataTable({
        pageLength: 5,
        lengthMenu: [[5, 10, 20, -1], [5, 10, 20, 'All']]
    });


</script>

<style>
    h1 {
        text-align: center;
        margin-bottom: 20px;
    }

    .table {
        margin-top: 20px;
        border-collapse: collapse;
        width: 100%;
    }

        .table th,
        .table td {
            border: 1px solid #ddd;
            padding: 8px;
        }

        .table th {
            background-color: #f2f2f2;
        }

        .table tbody tr:hover {
            background-color: #f2f2f2;
        }

    .btn {
        margin-right: 5px;
    }

        .btn i {
            margin-right: 3px;
        }
</style>
