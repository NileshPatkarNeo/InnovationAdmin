@model IEnumerable<Innovation_Admin.UI.Models.SysPrefGeneralBehaviour.SysPrefGeneralBehaviourDto>

@{
    Layout = "~/Views/Shared/_AdminHomePage.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>System Preference General Behaviour</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css" integrity="sha512-3pIirOrwegjM6erE5gPSwkUzO+3cTjpnV9lexlNZqvupR64iZBnOOTiiLPb9M36zpMScbmUNIcHUqKD47M719g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/css/CommonCss/CommonList.css" rel="stylesheet" />
    
</head>
<body>
    <h1>System Preference General Behaviour</h1>

    <div style="height:40px; margin:0 0">
        <p>
            <a asp-action="CreateSysPrefGeneralBehaviour" class="btn btn-primary float-end  ">
                <i class="bi bi-plus-circle"></i> Add
            </a>
        </p>
    </div>

    <table class="table table-bordered table-hover" id="generalBehaviour">
        <thead>
            <tr>
                <th>Sr.No</th>
                <th>Records Locked Seconds</th>
                <th>User Timeout</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="tableBody">
            @{
                int serialNumber = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td class="sr-no">@serialNumber</td>
                        <td>@Html.DisplayFor(modelItem => item.Records_Locked_Seconds)</td>
                        <td>@Html.DisplayFor(modelItem => item.User_Timeout)</td>
                        <td>
                            <a href="@Url.Action("EditSysPrefGeneralBehaviour", new { Preference_ID = item.Preference_ID })" class="btn btn-warning">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <a href="@Url.Action("SysPrefGeneralBehaviourDetails", new { Preference_ID = item.Preference_ID })" class="btn btn-info">
                                <i class="bi bi-info-circle"></i>
                            </a>
                            <a href="#" onclick="confirmDelete('@item.Preference_ID')" class="btn btn-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                    serialNumber++;
                }
            }
        </tbody>
    </table>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.bootstrap5.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/generalbehaviour.js"></script>

    @if (TempData["Message"] != null)
    {
        <script type="text/javascript">
            toastr.success('@TempData["Message"]');
        </script>
    }
</body>
</html>
