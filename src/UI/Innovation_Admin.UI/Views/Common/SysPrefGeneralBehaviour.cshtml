@model IEnumerable<Innovation_Admin.UI.Models.SysPrefGeneralBehaviour.SysPrefGeneralBehaviourDto>

@{
    Layout = "~/Views/Shared/_AdminHomePage.cshtml";
}

<!DOCTYPE html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    <title>System Preference General Behaviour</title>

    <style>
        h1{
        text-align:center;}
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
        .add-test
        {
        height:50px;
        margin:0 20px;}
    </style>
</head>

<body>
    <h1>System Preference General Behaviour</h1>

    <div class="add-test">
        <p>
            <a asp-action="CreateSysPrefGeneralBehaviour" class="btn btn-primary float-end"><i class="bi bi-plus-circle"></i> Add</a>
        </p>
    </div>
    

    <table class="table table-striped" id="generalBehaviour">
        <thead>
            <tr>
                <th>Sr.No</th>
                <th>Records Locked Seconds</th>
                <th>User Timeout</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="tableBody">
            @{
                int serialNumber = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td class="sr-no">@serialNumber</td>
                        <td>@Html.DisplayFor(modelItem => item.Records_Locked_Seconds)</td>
                        <td>@Html.DisplayFor(modelItem => item.User_Timeout)</td>
                        <td>
                            <a href="@Url.Action("EditSysPrefGeneralBehaviour", new { Preference_ID = item.Preference_ID })" class="btn btn-warning">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <a href="@Url.Action("SysPrefGeneralBehaviourDetails", new { Preference_ID = item.Preference_ID })" class="btn btn-info">
                                <i class="bi bi-info-circle"></i>
                            </a>
                            <a href="#" onclick="confirmDelete('@item.Preference_ID')" class="btn btn-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                    serialNumber++;
                }
            }
        </tbody>
    </table>

    <script src="~/Scripts/jquery-2.1.3.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/grid-0.4.3.min.js" type="text/javascript"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js"></script>

    <script>
        $('#generalBehaviour').dataTable({
            pageLength: 5,
            lengthMenu: [[5, 10, 20, -1], [5, 10, 20, 'All']]
        });

        function confirmDelete(preferenceId) {
            if (confirm("Are you sure ?")) {
                var form = document.createElement("form");
                form.method = "post";
                form.action = "/Common/DeleteSysPrefGeneralBehaviour";

                var hiddenField = document.createElement("input");
                hiddenField.type = "hidden";
                hiddenField.name = "Preference_ID";
                hiddenField.value = preferenceId;
                form.appendChild(hiddenField);

                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
</body>
