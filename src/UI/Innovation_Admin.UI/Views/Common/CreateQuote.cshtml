@model Innovation_Admin.UI.Models.Quote.CreateQuoteDto

@{
    ViewData["Title"] = "CreateQuote";
    Layout = "~/Views/Shared/_AdminHomePage.cshtml";
}
<head>
<link rel="stylesheet" href="~/css/Quotes/CreateQuote.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
<h1 class="text-center">Create Quote</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="form-box">
            <form id="createQuoteForm" asp-action="CreateQuote" novalidate>
                <div class="text-danger">
                    @if (ViewData.ModelState.ErrorCount > 0)
                    {
                        <div class="alert alert-danger">
                            <p>Please fix the errors below:</p>
                            <ul>
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label">
                        Quote <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Name" class="form-control" maxlength="101" required id="Name" onkeypress="return onlyAlphabets(event,this);" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <span class="text-danger" id="Name_error"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="QuoteBy" class="control-label">
                        Quote By <span class="text-danger">*</span>
                    </label>
                    <input asp-for="QuoteBy" class="form-control" maxlength="26" required id="QuoteBy" onkeypress="return onlyAlphabets(event,this);" />
                    <span asp-validation-for="QuoteBy" class="text-danger"></span>
                    <span class="text-danger" id="QuoteBy_error"></span>
                </div>
                <div class="btn-group">
                    <div>
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                    <div>
                        <a asp-action="Quotes" class="btn btn-secondary">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
<script src="~/js/Quotes/CreateQuote.js"></script>
