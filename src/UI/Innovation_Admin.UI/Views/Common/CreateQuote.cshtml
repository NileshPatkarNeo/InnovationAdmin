@model Innovation_Admin.UI.Models.Quote.CreateQuoteDto

@{
    ViewData["Title"] = "CreateQuote";
    Layout = "~/Views/Shared/_AdminHomePage.cshtml";
}
<head>
    <link href="~/css/receiptbatchsource/createreceiptbatchsource.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <h1 class="text-center">Create Quote</h1>

    <div class="form-container">
        <form id="createQuoteForm" asp-action="CreateQuote" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">
                    Quote <span class="text-danger">*</span>
                </label>
                <input asp-for="Name" id="Name" class="form-control" maxlength="101" onkeypress="return onlyAlphabets(event, this);" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <span class="text-danger" id="Name_error"></span>
            </div>

            <div class="form-group">
                <label asp-for="QuoteBy" class="control-label">
                    Quote By <span class="text-danger">*</span>
                </label>
                <input asp-for="QuoteBy" id="QuoteBy" class="form-control" maxlength="51" onkeypress="return onlyAlphabets(event, this);" />
                <span asp-validation-for="QuoteBy" class="text-danger"></span>
                <span class="text-danger" id="QuoteBy_error"></span>
            </div>

            <div class="button-container">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Quotes" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</body>

<script src="~/js/Quotes/CreateQuote.js"></script>
