@model Innovation_Admin.UI.Models.Account_Manager.AccountManagerDto

@{
    ViewData["Title"] = "EditAccountManager";
    Layout = "~/Views/Shared/_AdminHomePage.cshtml";
}

<style>
    .test {
        margin-top: 50px;
    }

    .btntest {
        margin-top: 5px;
    }

    .error-message {
        color: red;
        margin-top: 5px;
        font-size: 0.875em;
    }
</style>

<h1 class="text-center">Edit Account Manager</h1>

<div class="container-fluid">
    <div class="row justify-content-center test">
        <div class="col-md-6">
            <form asp-action="EditAccountManager" method="post" style="background-color: #f8f9fa; padding: 20px; border-radius: 10px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
                <div class="form-group" style="display:none">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Name <span class="text-danger">*</span></label>
                    <input asp-for="Name" class="form-control" id="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <span id="name-error" class="error-message"></span>
                </div>
                <div class="form-group text-center btntest">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="GetAllAccountManagers" class="btn btn-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/AccountManager.js">

</script>
