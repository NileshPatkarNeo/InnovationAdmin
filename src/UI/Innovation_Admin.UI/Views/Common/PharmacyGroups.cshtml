@model IEnumerable<Innovation_Admin.UI.Models.PharmacyGroup.PharmacyGroupDto>

@{
    Layout = "~/Views/Shared/_AdminHomePage.cshtml";
}

<h1>Pharmacy Group</h1>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
   
    <style>
        h1{
        text-align:center;}
        .add-div
        {
            height: 50px;
            margin: 0 20px;
        }
                .table-responsive {
            margin-top: 20px; 
        }

        table {
            border-collapse: collapse;
            width: 100%;
            border: 2px solid #ddd;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
            text-align: left;
        }

        .btn-sort {
            margin-left: 10px;
        }
    </style>
</head>

<div class="add-div">
    <p>
        <a asp-action="CreatePharmacyGroup" class="btn btn-primary float-end"><i class="bi bi-plus-circle"></i> Add</a>
    </p>
</div>


<table class="table table-striped" id="pharmacyGroup">
    <thead>
        <tr>
            <th>Sr.No</th>
            <th>Pharmacy Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int serialNumber = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@serialNumber</td>
                <td class="pharmacy-name">@Html.DisplayFor(modelItem => item.PharmacyName)</td>
                <td>
                    <a href="@Url.Action("EditPharmacyGroup", new { Id = item.Id })" class="btn btn-warning">
                        <i class="bi bi-pencil-fill"></i>
                    </a>

                    <a href="#" onclick="confirmDelete('@item.Id')" class="btn btn-danger">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
            serialNumber++;
        }
    </tbody>
</table>
<script src="~/Scripts/jquery-2.1.3.min.js" type="text/javascript"></script>
<script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
<script src="~/Scripts/grid-0.4.3.min.js" type="text/javascript"></script>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js"></script>


<script>
    $('#pharmacyGroup').dataTable({
        pageLength: 5,
        lengthMenu: [[5, 10, 20, -1], [5, 10, 20, 'All']]
    });
    function confirmDelete(Id) {
        if (confirm("Are you sure?")) {
            var form = document.createElement("form");
            form.method = "post";
            form.action = "/Common/DeletePharmacyGroup";

            var hiddenField = document.createElement("input");
            hiddenField.type = "hidden";
            hiddenField.name = "Id";
            hiddenField.value = Id;
            form.appendChild(hiddenField);

            document.body.appendChild(form);
            form.submit();
        }
    }
</script>
