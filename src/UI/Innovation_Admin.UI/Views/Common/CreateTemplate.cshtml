@model Innovation_Admin.UI.Models.Template.CreateTemplateDto

@{
    ViewData["Title"] = "Create Template";
    Layout = "~/Views/Shared/_AdminHomePage.cshtml";
}
<head>
    <link href="~/css/receiptbatchsource/createreceiptbatchsource.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <h1 class="text-center">Create Template</h1>

    <div class="form-container">
        <form id="createTemplateForm" asp-action="CreateTemplate" novalidate enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">
                    Name <span class="text-danger">*</span>
                </label>
                <input asp-for="Name" id="Name" class="form-control" maxlength="51" onkeypress="return onlyAlphabets(event, this);" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <span class="text-danger" id="Name_error"></span>
            </div>

            <div class="form-group">
                <label asp-for="PdfFile" class="control-label">
                    Pdf File <span class="text-danger">*</span>
                </label>
                <input type="file" asp-for="PdfFile" id="PdfFile" class="form-control" accept="application/pdf" />
                <span asp-validation-for="PdfFile" class="text-danger"></span>
                <span class="text-danger" id="PdfFile_error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Domain" class="control-label">
                    Domain <span class="text-danger">*</span>
                </label>
                <select asp-for="Domain" id="Domain" class="form-control">
                    <option value="">-- Select Domain --</option>
                    <option value="Default">Default</option>
                    <option value="PAYABLES">PAYABLES</option>
                    <option value="CLAIMLOADBATCH">CLAIMLOADBATCH</option>
                </select>
                <span asp-validation-for="Domain" class="text-danger"></span>
                <span class="text-danger" id="Domain_error"></span>
            </div>

            <div class="button-container">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Templates" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</body>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<script src="~/js/Templates/CreateTemplate.js"></script>


