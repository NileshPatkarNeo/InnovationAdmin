@model Innovation_Admin.UI.Models.RemittanceType.RemittanceTypeDto

@{
    Layout = "~/Views/Shared/_AdminHomePage.cshtml";
}
<head>
    <link href="~/css/remittancetype/createremittancetype.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
<h1 class="text-center">Create Remittance Type</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-light shadow">
                <div class="card-body">
                    <form asp-action="CreateRemittanceType" method="post" id="createRemittanceTypeForm" novalidate>
                        <div class="form-group mb-4">
                            <label asp-for="Name" class="control-label">Name <span class="required">*</span></label>
                            <input asp-for="Name" class="form-control" id="Name" maxlength="31" />
                            <span asp-validation-for="Name" class="text-danger" id="nameError"></span>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">
                                Create
                            </button>
                            <a asp-action="RemittanceTypes" class="btn btn-secondary ms-2">
                                Back
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>

<script src="~/js/remittancetypess/createremittancetype.js"></script>