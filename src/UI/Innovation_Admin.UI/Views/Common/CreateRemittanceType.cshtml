@model Innovation_Admin.UI.Models.RemittanceType.RemittanceTypeDto

@{
    Layout = "~/Views/Shared/_AdminHomePage.cshtml";
}

<head>
    <link href="~/css/ReceiptBatchSource/CreateReceiptBatchSource.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <link href="~/css/correspondencenote/createcorrespondencenote.css" rel="stylesheet" />
</head>

<body>
    <h1 class="text-center">Create Remittance Type</h1>

    <div class="form-container">
        <form id="createRemittanceTypeForm" asp-action="CreateRemittanceType" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">Name <span class="text-danger">*</span></label>
                <input asp-for="Name" id="Name" class="form-control" maxlength="31" />
                <span asp-validation-for="Name" class="text-danger" id="nameError"></span>
            </div>

            <div class="button-container">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="RemittanceTypes" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</body>

