@model IEnumerable<Innovation_Admin.UI.Models.ReceiptBatchSource.ReceiptBatchSourceDto>

@{
    Layout = "~/Views/Shared/_AdminHomePage.cshtml";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css" integrity="sha512-3pIirOrwegjM6erE5gPSwkUzO+3cTjpnV9lexlNZqvupR64iZBnOOTiiLPb9M36zpMScbmUNIcHUqKD47M719g==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<style>
    body {
        margin: 0px;
        padding: 0px;
        font-family: Arial, sans-serif;
      
    }

    h1 {
        text-align: center;
        color: #333;
        margin-top: 20px;
        font-size: 2em;
    }



    h1.text-center {
        margin-bottom: 20px;
        color: #333;
    }

  
    .table {
        margin-top: 20px;
        border: 1px solid #dee2e6;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        background-color: #fff;
    }

        .table th,
        .table td {
            vertical-align: middle;
            text-align: center;
            padding: 10px;
        }

        .table th {
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
        }

        .table td {
            border: 1px solid #dee2e6;
        }

    .btn {
        margin: 2px;
    
        color: #fff;
        border: none;
        border-radius: 4px;
        padding: 5px 10px;
    }

   
    .add-button-container {
        text-align: right;
        margin-bottom: 10px;
        margin-right: 30px;
    }

        .add-button-container a {
            margin-right: 10px;
        }
</style>

<body>
    <h1>Receipt Batch Source</h1>

    <div style="height:50px; margin:0 20px">
        <p>
            <a asp-action="CreateReceiptBatchSource" class="btn btn-primary float-end">
                <i class="bi bi-plus-circle"></i> Add
            </a>
        </p>
    </div>

    <table id="ReceiptBatchSource" class="table">
        <thead>
            <tr>
                <th>Sr.No</th>
                <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                <th>@Html.DisplayNameFor(model => model.First().Type)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var (item, index) in Model.Select((value, i) => (value, i)))
            {
                <tr>
                    <td>@(index + 1)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Type)</td>
                    <td>
                        <a href="@Url.Action("EditReceiptBatchSource", new { Id = item.Id })" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a href="#" onclick="confirmDelete('@item.Id')" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.min.js"></script>
<script src="https://cdn.datatables.net/2.0.8/js/dataTables.js"></script>
<script src="https://cdn.datatables.net/2.0.8/js/dataTables.bootstrap5.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<script>
    $("#ReceiptBatchSource").dataTable({
        pageLength: 5,
        lengthMenu: [[5, 10, 20, -1], [5, 10, 20, 'All']],
        paging: true,
        sorting: true,
        serverSide: false,
        columns: [
            { name: "Id", orderable: true },
            { name: "Name", orderable: true },
            { name: "Type", orderable: true },
            { name: "Action", orderable: false }
        ]
    });
    function confirmDelete(templateId) {
        Swal.fire({
            title: 'Are you sure to Delete?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/Common/DeleteReceiptBatch',
                    type: 'POST',
                    data: { Id : templateId },
                    success: function (response) {
                        if (response.success) {
                            Swal.fire(
                                'Deleted!',
                                'Your record has been deleted.',
                                'success'
                            ).then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire(
                                'Error!',
                                response.message || 'There was an issue deleting the record.',
                                'error'
                            );
                        }
                    },
                    error: function (xhr, status, error) {
                        Swal.fire(
                            'Error!',
                            xhr.responseJSON?.message || 'There was an issue deleting the record.',
                            'error'
                        );
                    }
                });
            }
        });
    }
</script>


@if (TempData["Message"] != null)
{
    <script type="text/javascript">
        toastr.success('@TempData["Message"]');
    </script>
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>