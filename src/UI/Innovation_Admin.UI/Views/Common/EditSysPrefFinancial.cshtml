@model Innovation_Admin.UI.Models.SysPrefFinancial.SysPrefFinancialDto

@{
    ViewData["Title"] = "EditSysPrefFinancial";
    Layout = "~/Views/Shared/_AdminHomePage.cshtml";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        h1.text-center, hr {
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 1rem;
            position: relative;
        }

            .form-group select {
                padding-right: 30px; /* To make room for the icon */
                appearance: none; /* Remove default dropdown arrow */
            }

            .form-group .dropdown-icon {
                position: absolute;
                top: 50%;
                right: 10px;
                transform: translateY(-50%);
                pointer-events: none; /* So the icon does not block the dropdown interaction */
                font-size: 1.2em; /* Adjust the size as needed */
            }

        .button-container {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

            .button-container .btn {
                flex: 1;
                text-align: center;
                max-width: 150px; /* Optional: set a maximum width for the buttons */
                display: flex;
                align-items: center;
                justify-content: center; /* Center the text horizontally */
            }

        a {
            color: #007bff;
            text-decoration: none;
            padding: 10px 15px;
            border-radius: 4px;
        }

            a:hover {
                color: #0056b3;
                text-decoration: none;
            }

        .btn {
            display: inline-flex;
            align-items: center;
        }

        .error-message {
            color: red;
            margin-top: 5px;
            font-size: 0.875em;
        }

        .card-shadow {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }
    </style>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</head>

<body>
    <h1 class="text-center">Edit System Preference Financial</h1>

    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card card-shadow">
                <div class="card-body">
                    <form asp-action="EditSysPrefFinancial">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="FinancialID" class="hidden" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="CompanyID" class="control-label">Company <span class="text-danger">*</span></label>
                                    <select asp-for="CompanyID" class="form-control form-select-md form-select" asp-items="@ViewBag.CompanyList" id="CompanyID"></select>
                                    <span id="companyIDError" class="error-message"></span>
                                    <span asp-validation-for="CompanyID" class="text-danger"></span>

                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="DefaultPaymentMethod" class="control-label">Default Payment Method <span class="text-danger">*</span></label>
                                    <select asp-for="DefaultPaymentMethod" class="form-control form-select-md form-select" id="DefaultPaymentMethod">
                                        <option value="">-- Select Payment Method --</option>
                                        <option value="Net Banking">Net Banking</option>
                                        <option value="UPI">UPI</option>
                                        <option value="Cash">Cash</option>
                                    </select>
                                    <span id="defaultPaymentMethodError" class="error-message"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="LastCheckNo" class="control-label">Last Check No <span class="text-danger">*</span></label>
                                    <input asp-for="LastCheckNo" class="form-control" id="LastCheckNo" />
                                    <span id="lastCheckNoError" class="error-message"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="ClaimAgeCollectionStart" class="control-label">Claim Age Collection Start <span class="text-danger">*</span></label>
                                    <input asp-for="ClaimAgeCollectionStart" class="form-control" id="ClaimAgeCollectionStart" type="date" />
                                    <span id="claimAgeCollectionStartError" class="error-message"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="ClaimAgeCollectionEnd" class="control-label">Claim Age Collection End <span class="text-danger">*</span></label>
                                    <input asp-for="ClaimAgeCollectionEnd" class="form-control" id="ClaimAgeCollectionEnd" type="date" />
                                    <span id="claimAgeCollectionEndError" class="error-message"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="DefaultReceiptBatchDescription" class="control-label">Default Receipt Batch Description <span class="text-danger">*</span></label>
                                    <input asp-for="DefaultReceiptBatchDescription" class="form-control" id="DefaultReceiptBatchDescription" />
                                    <span id="defaultReceiptBatchDescriptionError" class="error-message"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="ClaimPaidThreshold" class="control-label">Claim Paid Threshold <span class="text-danger">*</span></label>
                                    <input asp-for="ClaimPaidThreshold" class="form-control" id="ClaimPaidThreshold" />
                                    <span id="claimPaidThresholdError" class="error-message"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="ClaimStatusWriteOff" class="control-label">Claim Status Write Off <span class="text-danger">*</span></label>
                                    <input asp-for="ClaimStatusWriteOff" class="form-control" id="ClaimStatusWriteOff" />
                                    <span id="claimStatusWriteOffError" class="error-message"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="DaysToBlock" class="control-label">Days To Block <span class="text-danger">*</span></label>
                                    <input asp-for="DaysToBlock" class="form-control" id="DaysToBlock" />
                                    <span id="daysToBlockError" class="error-message"></span>
                                </div>
                            </div>
                        </div>

                        <div class="button-container">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a asp-action="SysPrefFinancial" class="btn btn-secondary">Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/EditSysPrefFinancial.js"></script>
</body>
