@model IEnumerable<Innovation_Admin.UI.Models.SysPrefCompany.SysPrefCompanyDto>


<h1>SysPrefCompany</h1>

<p>
    <a asp-action="CreateSysPrefCompany">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th style="display:none;"> 
                @Html.DisplayNameFor(model => model.CompanyID )
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TermForPharmacy)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td style="display:none;">
                @Html.DisplayFor(modelItem => item.CompanyID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TermForPharmacy)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditSysPrefCompany", new { companyId = item.CompanyID }) |
                <a href="#" onclick="confirmDelete('@item.CompanyID')">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script type="text/javascript">
        function confirmDelete(companyId) {
            if (confirm("Are you sure you want to delete this company?")) {
                var form = document.createElement("form");
                form.method = "post";
                form.action = "/Common/DeleteSysPrefCompany";

                var hiddenField = document.createElement("input");
                hiddenField.type = "hidden";
                hiddenField.name = "companyId";
                hiddenField.value = companyId;
                form.appendChild(hiddenField);

                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
}
