@model Innovation_Admin.UI.Models.PharmacyGroup.PharmacyGroupDto

@{
    Layout = "~/Views/Shared/_AdminHomePage.cshtml";
}

<h1 class="text-center mb-4">Edit Pharmacy Group</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="EditPharmacyGroup" style="border: 1px solid #ccc; padding: 20px; border-radius: 10px;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="display: none;">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" readonly="readonly" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                @Html.HiddenFor(model => model.Id)
                <div class="form-group mb-4">
                    <label asp-for="PharmacyName" class="control-label">Pharmacy Name<span style="color: red;">*</span></label>
                    <input asp-for="PharmacyName" class="form-control" style="margin-top: 10px;" />
                    <span asp-validation-for="PharmacyName" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <div class="d-inline-block">
                        <input type="submit" value="Save" class="btn btn-primary mr-2" />
                    </div>
                    <div class="d-inline-block">
                        <a asp-action="PharmacyGroups" class="btn btn-secondary">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
