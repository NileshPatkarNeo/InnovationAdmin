@model Innovation_Admin.UI.Models.PharmacyGroup.PharmacyGroupDto

@{
    ViewData["Title"] = "EditPharmacyGroup";
    Layout = "~/Views/Shared/_AdminHomePage.cshtml";
}

<h1>Edit Pharmacy Group</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPharmacyGroup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" new { readonly="readonly" } /> 
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            @Html.HiddenFor(model => model.Id)
            <div class="form-group">
                <label asp-for="PharmacyName" class="control-label">Pharmacy Name<span style="color: red;">*</span></label>
                <input asp-for="PharmacyName" class="form-control" />
                <span asp-validation-for="PharmacyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="PharmacyGroups">Back to List</a>
</div>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

