@model IEnumerable<Innovation_Admin.UI.Models.Account_Manager.AccountManagerDto>

@{
    ViewData["Title"] = "GetAllAccountManagers";
    Layout = "~/Views/Shared/_AdminHomePage.cshtml";
}

<h1>Account Managers</h1>

<p>
    <a asp-action="CreateAccountManager" class="btn btn-primary">Create New</a>
</p>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Serial Number</th>
                <th style="display:none">
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                int serialNumber = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@serialNumber</td>
                    <td style="display:none">
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a href="@Url.Action("EditAccountManager", new { Id = item.Id })" class="btn btn-primary">Edit</a>
                        <a href="#" onclick="confirmDelete('@item.Id')" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                serialNumber++;
            }
        </tbody>
    </table>
</div>

<script type="text/javascript">
    function confirmDelete(Id) {
        if (confirm("Are you sure you?")) {
            var form = document.createElement("form");
            form.method = "post";
            form.action = "/Common/DeleteAccountManager";

            var hiddenField = document.createElement("input");
            hiddenField.type = "hidden";
            hiddenField.name = "Id";
            hiddenField.value = Id;
            form.appendChild(hiddenField);

            document.body.appendChild(form);
            form.submit();
        }
    }
</script>
