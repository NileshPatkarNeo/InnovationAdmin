@model IEnumerable<Innovation_Admin.UI.Models.SysPrefFinancial.SysPrefFinancialDto>

@{
    ViewData["Title"] = "SysPrefFinancial";
}

<h1>System Preference Financial</h1>

<p>
    <a asp-action="CreateSysPrefFinancial" asp-controller="Common">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
          
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultPaymentMethod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastCheckNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaimAgeCollectionStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaimAgeCollectionEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultReceiptBatchDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaimPaidThreshold)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaimStatusWriteOff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DaysToBlock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
          
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultPaymentMethod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastCheckNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClaimAgeCollectionStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClaimAgeCollectionEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultReceiptBatchDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClaimPaidThreshold)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClaimStatusWriteOff)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaysToBlock)
            </td>
            <td>
                    @Html.ActionLink("Edit", "EditSysPrefFinancial", new { financialId = item.FinancialID })
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    <a href="#" onclick="confirmDelete('@item.FinancialID')">Delete</a>
             </td>
        </tr>
}
    </tbody>
</table>

<script type="text/javascript">
    function confirmDelete(financialId) {
        if (confirm("Are you sure you want to delete this SysPrefFinancial?")) {
            var form = document.createElement("form");
            form.method = "post";
            form.action = "/Common/DeleteSysPrefFinancial";

            var hiddenField = document.createElement("input");
            hiddenField.type = "hidden";
            hiddenField.name = "financialId";
            hiddenField.value = financialId;
            form.appendChild(hiddenField);

            document.body.appendChild(form);
            form.submit();

        }
    }

</script>
