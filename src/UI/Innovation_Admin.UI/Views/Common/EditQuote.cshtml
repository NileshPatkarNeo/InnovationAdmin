@model Innovation_Admin.UI.Models.Quote.QuoteDto

@{
    ViewData["Title"] = "EditQuote";
    Layout = "~/Views/Shared/_AdminHomePage.cshtml";
}
<head>
    <link href="~/css/receiptbatchsource/editreceiptbatchsource.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <h1 class="text-center">Edit Quote</h1>

    <div class="form-container">
        <form id="editQuoteForm" asp-action="EditQuote" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group" style="display:none;">
                <label asp-for="ID" class="control-label">ID</label>
                <input id="ID" asp-for="ID" class="form-control" />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">Quote <span class="text-danger">*</span></label>
                <input id="Name" asp-for="Name" class="form-control" maxlength="101" onkeypress="return onlyAlphabets(event, this);" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <span class="text-danger" id="Name_error"></span>
            </div>

            <div class="form-group">
                <label asp-for="QuoteBy" class="control-label">Quote By <span class="text-danger">*</span></label>
                <input id="QuoteBy" asp-for="QuoteBy" class="form-control" maxlength="51" onkeypress="return onlyAlphabets(event, this);" />
                <span asp-validation-for="QuoteBy" class="text-danger"></span>
                <span class="text-danger" id="QuoteBy_error"></span>
            </div>

            <div class="button-container">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Quotes" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</body>

<script src="~/js/Quotes/EditQuote.js"></script>
