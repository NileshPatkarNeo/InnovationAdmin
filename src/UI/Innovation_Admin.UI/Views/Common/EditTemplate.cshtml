@model Innovation_Admin.UI.Models.Template.TemplateDto

@{
    ViewData["Title"] = "EditTemplate";
    Layout = "~/Views/Shared/_AdminHomePage.cshtml";
}

<head>
    <link href="~/css/receiptbatchsource/editreceiptbatchsource.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <h1 class="text-center">Edit Template</h1>

    <div class="form-container">
        <form id="editTemplateForm" asp-action="EditTemplate" enctype="multipart/form-data" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group" style="display:none;">
                <label asp-for="ID" class="control-label">ID</label>
                <input id="ID" asp-for="ID" class="form-control" />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">Name <span class="text-danger">*</span></label>
                <input id="Name" asp-for="Name" class="form-control" maxlength="51" onkeypress="return onlyAlphabets(event, this);" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <span class="text-danger" id="Name_error"></span>
            </div>

            @Html.HiddenFor(x => x.PdfTemplateFile)
            <div class="form-group">
                <label asp-for="PdfFile" class="control-label">PDF File <span class="text-danger">*</span></label>
                <div>
                    @if (!string.IsNullOrEmpty(Model.PdfTemplateFile))
                    {
                        <p>Current File:<br /> @Model.PdfTemplateFile</p>
                        <input type="checkbox" id="keepCurrentPdf" name="keepCurrentPdf" value="true" checked>
                        <label for="keepCurrentPdf">Keep current PDF</label>
                    }
                    <input type="file" asp-for="PdfFile" class="form-control" maxlength="201" id="PdfFile" accept="application/pdf" />
                    <span asp-validation-for="PdfFile" class="text-danger"></span>
                    <span class="text-danger" id="PdfFile_error"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Domain" class="control-label">Domain</label>
                <select asp-for="Domain" class="form-control form-select">
                    <option value="Default">Default</option>
                    <option value="PAYABLES">PAYABLES</option>
                    <option value="CLAIMLOADBATCH">CLAIMLOADBATCH</option>
                </select>
                <span asp-validation-for="Domain" class="text-danger"></span>
            </div>

            <div class="button-container">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Templates" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</body>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

 <script src="~/js/Templates/EditTemplate.js"></script>
