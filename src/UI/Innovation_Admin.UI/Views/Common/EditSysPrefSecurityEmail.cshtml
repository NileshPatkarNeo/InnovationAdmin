@model Innovation_Admin.UI.Models.SysPrefSecurityEmail.SysPrefSecurityEmailDto

@{
    ViewData["Title"] = "EditSysPrefSecurityEmail";
    Layout = "~/Views/Shared/_AdminHomePage.cshtml";
}

<head>
    <link href="~/css/receiptbatchsource/editreceiptbatchsource.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</head>
<h1>Edit System Security Email</h1>

<body>
    <div class="form-container">
       

        <form asp-action="EditSysPrefSecurityEmail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group" style="display:none;">
                <label asp-for="SysPrefSecurityEmailId" class="control-label">SysPrefSecurityEmailId</label>
                <input asp-for="SysPrefSecurityEmailId" class="form-control" readonly />
                <span asp-validation-for="SysPrefSecurityEmailId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DefaultFromName" class="control-label">Default From Name <span class="text-danger">*</span></label>
                <input asp-for="DefaultFromName" id="DefaultFromName" class="form-control" />
                <span asp-validation-for="DefaultFromName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DefaultFromAddress" class="control-label">Default From Address <span class="text-danger">*</span></label>
                <input asp-for="DefaultFromAddress" id="DefaultFromAddress" class="form-control" />
                <span asp-validation-for="DefaultFromAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DefaultReplyToAddress" class="control-label">Default Reply To Address <span class="text-danger">*</span></label>
                <input asp-for="DefaultReplyToAddress" id="DefaultReplyToAddress" class="form-control" />
                <span asp-validation-for="DefaultReplyToAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DefaultReplyToName" class="control-label">Default Reply To Name <span class="text-danger">*</span></label>
                <input asp-for="DefaultReplyToName" id="DefaultReplyToName" class="form-control" />
                <span asp-validation-for="DefaultReplyToName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label">Status <span class="text-danger">*</span></label>
                <input asp-for="Status" id="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="button-container">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="SysPrefSecurityEmail" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</body>



    <script src="~/js/EditSysPrefSecurityEmail.js"></script>

