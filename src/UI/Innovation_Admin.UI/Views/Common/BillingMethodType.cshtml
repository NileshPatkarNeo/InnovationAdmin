@model IEnumerable<Innovation_Admin.UI.Models.BillingMethodType.BillingMethodTypeDto>

@{
    ViewData["Title"] = "BillingMethodType";
    Layout = "~/Views/Shared/_AdminHomePage.cshtml";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css" integrity="sha512-3pIirOrwegjM6erE5gPSwkUzO+3cTjpnV9lexlNZqvupR64iZBnOOTiiLPb9M36zpMScbmUNIcHUqKD47M719g==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <h1>Billing Method Type</h1>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        h1 {
            text-align: center;
        }

        .table {
            border: 1px solid #ddd;
            align-content: center;
        }

            .table th, .table td {
                vertical-align: middle;
                text-align: center;
                border: 1px solid #ddd;
            }

            .table th {
                cursor: pointer;
            }

        .btn-warning .bi-pencil {
            margin-right: 5px;
        }

        .btn-primary .bi-plus-lg {
            margin-right: 5px;
        }

        .btn-warning, .btn-danger {
            margin-right: 5px;
        }

        .btn-link {
            padding: 0;
        }

        .w-50 {
            width: 50%;
        }

        .input-group-text {
            background-color: transparent;
            border: none;
        }

            .input-group-text .bi-search {
                color: #000;
            }
    </style>
</head>

<div style="height: 60px; margin: 0 20px;">
    <p>
        <a asp-action="CreateBillingMethodType" class="btn btn-primary mb-3 float-end">
            <i class="bi bi-plus-circle"></i> Add
        </a>
    </p>
</div>

<table class="table table-striped table-bordered" id="billingMethodTypeTable">
    <thead>
        <tr>
            <th>
                Sr No.
                <button class="btn btn-link p-0" onclick="sortTable(0)">
                    <i class="bi bi-arrow-up-down"></i>
                </button>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="billingMethodTypeTableBody">
        @{
            int serialNumber = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@serialNumber</td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a href="@Url.Action("EditBillingMethodType", new { id = item.ID })" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <button class="btn btn-danger btn-sm" onclick="confirmDelete('@item.ID')">
                            <i class="bi bi-trash"></i>
                        </button>
                    </td>
                </tr>
                serialNumber++;
            }
        }
    </tbody>
</table>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.min.js"></script>
<script src="https://cdn.datatables.net/2.0.8/js/dataTables.js"></script>
<script src="https://cdn.datatables.net/2.0.8/js/dataTables.bootstrap5.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<script>
    $("#billingMethodTypeTable").dataTable({
        pageLength: 5,
        lengthMenu: [[5, 10, 20, -1], [5, 10, 20, 'All']],
        paging: true,
        sorting: true,
        serverSide: false,
        columns: [
            { name: "Sr.No", orderable: true },
            { name: "Name", orderable: true },
            { name: "Action", orderable: false }
        ]
    });

    function confirmDelete(billingMethodTypeId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/Common/DeleteBillingMethodType',
                    type: 'POST',
                    data: { billingMethodTypeId: billingMethodTypeId },
                    success: function (response) {
                        if (response.success) {
                            Swal.fire(
                                'Deleted!',
                                'Your record has been deleted.',
                                'success'
                            ).then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire(
                                'Error!',
                                response.message || 'There was an issue deleting the record.',
                                'error'
                            );
                        }
                    },
                    error: function (xhr, status, error) {
                        Swal.fire(
                            'Error!',
                            xhr.responseJSON?.message || 'There was an issue deleting the record.',
                            'error'
                        );
                    }
                });
            }
        });
    }
</script>
@if (TempData["Message"] != null)
{
    <script type="text/javascript">
        toastr.success('@TempData["Message"]');
    </script>
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
