@model Innovation_Admin.UI.Models.PharmacyGroup.PharmacyGroupDto
@{
    Layout = "~/Views/Shared/_AdminHomePage.cshtml";
}
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <link href="~/css/pharmacygroup/createpharmacygroup.css" rel="stylesheet" />
</head>

<body>
    <h1 class="text-center">Create Pharmacy Group</h1>

    <div class="form-container">
        <form id="createPharmacyGroupForm" asp-action="CreatePharmacyGroup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PharmacyName" class="control-label">Pharmacy Name <span class="text-danger">*</span></label>
                <input id="PharmacyName" asp-for="PharmacyName" class="form-control" maxlength="26" />
                <span asp-validation-for="PharmacyName" class="text-danger"></span>
            </div>

            <div class="button-container">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="PharmacyGroups" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</body>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}


<script>
    document.getElementById("PharmacyName").addEventListener("input", function () {
        var errorSpan = document.querySelector("span[data-valmsg-for='PharmacyName']");
        if (errorSpan) {
            errorSpan.textContent = "";
        }
    });
</script>
