@model Innovation_Admin.UI.Models.AdminRole.AdminRoleDto

@{
    ViewData["Title"] = "CreateAdminRole";
    Layout = "~/Views/Shared/_AdminHomePage.cshtml";
}
<head>
    <link href="~/css/receiptbatchsource/createreceiptbatchsource.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <h1 class="text-center">Create Admin Role</h1>

    <div class="form-container">
        <form id="createAdminRoleForm" asp-action="CreateAdminRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Role_Name" class="control-label">Role Name <span class="text-danger">*</span></label>
                <input asp-for="Role_Name" id="Role_Name" class="form-control" maxlength="51" onkeypress="return onlyAlphabets(event,this);" />
                <span asp-validation-for="Role_Name" class="text-danger"></span>
                <span class="text-danger" id="Role_Name_error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label">Description <span class="text-danger">*</span></label>
                <input asp-for="Description" id="Description" class="form-control" maxlength="101" onkeypress="return onlyAlphabets(event,this);" />
                <span asp-validation-for="Description" class="text-danger"></span>
                <span class="text-danger" id="Description_error"></span>
            </div>

            <div class="button-container">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="AdminRole" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</body>
   <script src="~/js/CreateAdminRole.js"></script>
   
