@model IEnumerable<Innovation_Admin.UI.Models.Template.TemplateDto>

@{
    ViewData["Title"] = "Templates";
    Layout = "~/Views/Shared/_AdminHomePage.cshtml";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css" integrity="sha512-3pIirOrwegjM6erE5gPSwkUzO+3cTjpnV9lexlNZqvupR64iZBnOOTiiLPb9M36zpMScbmUNIcHUqKD47M719g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/Templates/Templates.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

</head>

<div class="container">
    <h1 class="text-center">Templates</h1>

    <div style="height:40px; margin:0 0">
        <a asp-action="CreateTemplate" class="btn btn-primary float-end" id="addBannerForm" enctype="multipart/form-data">
            <i class="bi bi-plus-circle"></i> Add
        </a>
    </div>

    <table class="table table-bordered table-hover" id="templateTable">
        <thead class="table-light">
            <tr>
                <th>Sr.No</th>
                <th>Template Name</th>
                <th>Pdf File Template</th>
                <th>Domain</th>
                <th>Size</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="tableBody">
            @{
                int serialNumber = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@serialNumber</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.PdfTemplateFile))
                        {
                            <a href="@Url.Content("~/" + item.PdfTemplateFile)" target="_blank" class="pdf-link">
                                <i class="fa fa-file-pdf pdf-icon"></i> View PDF
                            </a>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.PdfTemplateFile)
                        }
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Domain)</td>
                    <td>@Html.DisplayFor(modelItem => item.Size)</td>
                    <td>
                        <a href="@Url.Action("EditTemplate", new { templateId = item.ID })" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a href="#" class="btn btn-danger btn-sm" onclick="confirmDelete('@item.ID')">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
                serialNumber++;
            }
        </tbody>
    </table>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.min.js"></script>
<script src="https://cdn.datatables.net/2.0.8/js/dataTables.js"></script>
<script src="https://cdn.datatables.net/2.0.8/js/dataTables.bootstrap5.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script src="~/js/Templates/Templates.js"></script>

@if (TempData["Message"] != null)
{
    <script type="text/javascript">
        toastr.success('@TempData["Message"]');
    </script>
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#addBannerForm").validate();
    });
</script>

